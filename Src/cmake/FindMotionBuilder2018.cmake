foreach(MOBU_LIB fbsdk)
    find_file(MOTIONBUILDER2018_${MOBU_LIB}_LIBRARY lib${MOBU_LIB}${CMAKE_SHARED_LIBRARY_SUFFIX} PATH_SUFFIXES lib/linux_64)
